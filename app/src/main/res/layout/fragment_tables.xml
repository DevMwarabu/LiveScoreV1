<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.LeagueFrags.Tables"
    android:background="?attr/background"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip.group.main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacing="8dp"
                app:selectionRequired="true"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip.all"
                    style="@style/CustomChipChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:checked="true"
                    android:text="ALL"
                    android:textAppearance="?textAppearanceCaption" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip.home"
                    style="@style/CustomChipChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="HOME"
                    android:textAppearance="?textAppearanceCaption" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip.away"
                    style="@style/CustomChipChoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="AWAY"
                    android:textAppearance="?textAppearanceCaption" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            app:cardUseCompatPadding="false"
            app:cardBackgroundColor="@color/googleColor"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv.league.description"
                    android:visibility="gone"
                    android:textAppearance="?textAppearanceCaption"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:id="@+id/tv.league.season"
                    android:textAppearance="?textAppearanceCaption"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
            app:rippleColor="@android:color/darker_gray"
            android:clickable="true"
            android:id="@+id/card.rotate"
            app:cardUseCompatPadding="false"
            app:cardBackgroundColor="?attr/cardBackgroundColor"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_screen_rotation_24"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardUseCompatPadding="false"
                app:cardBackgroundColor="?attr/background"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                app:strokeColor="@android:color/darker_gray"
                app:strokeWidth="0.1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="horizontal">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/darker_gray"
                            android:textAppearance="?textAppearanceCaption"
                            android:text="#"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_gravity="center"
                            android:id="@+id/tv.league.name"
                            android:textAppearance="?textAppearanceCaption"
                            android:textColor="@android:color/darker_gray"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="42dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textAppearance="?textAppearanceCaption"
                                android:textColor="@android:color/darker_gray"
                                android:text="P"/>
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:id="@+id/tv.w"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:textAppearance="?textAppearanceCaption"
                                android:textColor="@android:color/darker_gray"
                                android:text="W"/>
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:id="@+id/tv.d"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:textAppearance="?textAppearanceCaption"
                                android:textColor="@android:color/darker_gray"
                                android:text="D"/>
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:id="@+id/tv.l"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:textAppearance="?textAppearanceCaption"
                                android:textColor="@android:color/darker_gray"
                                android:text="L"/>
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:id="@+id/tv.f"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:textAppearance="?textAppearanceCaption"
                                android:textColor="@android:color/darker_gray"
                                android:text="F"/>
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:id="@+id/tv."
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:textAppearance="?textAppearanceCaption"
                                android:textColor="@android:color/darker_gray"
                                android:text="A"/>
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="42dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textAppearance="?textAppearanceCaption"
                                android:textColor="@android:color/darker_gray"
                                android:text="GD"/>
                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="42dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textAppearance="?textAppearanceCaption"
                                android:textColor="@android:color/darker_gray"
                                android:text="PTS"/>

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="true"
                        android:id="@+id/rv.all"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:nestedScrollingEnabled="true"
                        android:id="@+id/rv.home"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:nestedScrollingEnabled="true"
                        android:id="@+id/rv.away"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>