<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?attr/background"
    android:layout_height="match_parent"
    tools:context=".Fragments.FixtureInformation.LineUps">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:visibility="gone"
                android:id="@+id/linear.maain.secon"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_baseline_warning_24"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    app:cardUseCompatPadding="false"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="?attr/cardBackgroundColor">
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?textAppearanceCaption"
                        android:text="Line-Up data will be displayed here"/>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear.maain"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="false"
                    app:cardBackgroundColor="?attr/background"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:strokeWidth="0.1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textAppearance="?textAppearanceCaption"
                            android:id="@+id/tv.home.lineup"
                            android:layout_gravity="center"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:layout_height="wrap_content"
                            android:textAppearance="?textAppearanceCaption"
                            android:id="@+id/tv.away.lineup"
                            android:layout_gravity="center"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:textAppearance="?textAppearanceCaption"
                    android:textColor="@color/shimmer_color"
                    android:text="PLAYERS"
                    tools:ignore="RtlCompat" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="false"
                    app:cardBackgroundColor="?attr/background"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:strokeWidth="0.1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textAppearance="?textAppearanceCaption"
                            android:id="@+id/tv.home.players"
                            android:layout_gravity="center"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:layout_height="wrap_content"
                            android:textAppearance="?textAppearanceCaption"
                            android:id="@+id/tv.away.players"
                            android:layout_gravity="center"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:textAppearance="?textAppearanceCaption"
                    android:textColor="@color/shimmer_color"
                    android:text="SUBSTITUTES PLAYERS"
                    tools:ignore="RtlCompat" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="false"
                    app:cardBackgroundColor="?attr/background"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:strokeWidth="0.1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textAppearance="?textAppearanceCaption"
                            android:id="@+id/tv.home.sub"
                            android:layout_gravity="center"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:layout_height="wrap_content"
                            android:textAppearance="?textAppearanceCaption"
                            android:id="@+id/tv.away.sub"
                            android:layout_gravity="center"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:textAppearance="?textAppearanceCaption"
                    android:textColor="@color/shimmer_color"
                    android:text="COACHES"
                    tools:ignore="RtlCompat" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="false"
                    app:cardBackgroundColor="?attr/background"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:strokeWidth="0.1dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textAppearance="?textAppearanceCaption"
                            android:id="@+id/tv.home.coach"
                            android:layout_gravity="center"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:layout_height="wrap_content"
                            android:textAppearance="?textAppearanceCaption"
                            android:id="@+id/tv.away.coach"
                            android:layout_gravity="center"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>