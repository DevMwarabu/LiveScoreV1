<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".Introduction.WelcomeActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="false"
        app:cardElevation="0dp"
        android:visibility="gone"
        android:id="@+id/card.skip"
        app:cardBackgroundColor="?attr/background"
        android:clickable="true"
        android:layout_gravity="end"
        app:rippleColor="@android:color/darker_gray">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:textAppearance="?textAppearanceBody1"
            android:text="skip"/>

    </com.google.android.material.card.MaterialCardView>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/tv.terms"
        android:textAppearance="?textAppearanceBody1"
        android:text="@string/by_clicking_get_started_you_agreewith_our_terms_and_contions"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.Button"
        app:cornerRadius="8dp"
        android:id="@+id/btn.get.started"
        android:text="Get Started"
        app:iconTint="@android:color/white"
        android:padding="12dp"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/layoutDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_gravity="center"/>

</LinearLayout>